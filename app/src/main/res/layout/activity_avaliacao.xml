<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AvaliacaoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/colorPrimary">
            <Button
                android:id="@+id/buttonVoltarAvaliacao"
                android:background="@drawable/back_24px"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="2dp"
                android:layout_centerVertical="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="35dp"
                android:text="Avaliação da República"
                android:textColor="@color/black"/>
        </RelativeLayout>

        <TextView
            style="@style/FormTextView"
            android:text="Avalie a república na qual você está acomodado:"/>

        <RatingBar
            android:id="@+id/rating_bar"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="0.5"
            android:rating="4.5"/>

        <TextView
            style="@style/FormTextView"
            android:text="Comentários sobre a república (opcional): "/>

        <EditText
            android:id="@+id/editTextComentarios"
            android:background="@drawable/squarebox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft = "16dp"
            android:layout_marginRight = "16dp"
            android:layout_marginTop="16dp"
            android:drawablePadding="5dp"
            android:padding="5dp"
            android:imeOptions="actionNext"/>


        <Button
            android:id="@+id/buttonSubmeterAvaliacao"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop = "24dp"
            android:layout_marginLeft = "110dp"
            android:layout_marginRight = "110dp"
            android:gravity="center"
            android:text="Submeter Avaliação"
            android:backgroundTint="@color/colorAccent"/>


    </LinearLayout>
</ScrollView>