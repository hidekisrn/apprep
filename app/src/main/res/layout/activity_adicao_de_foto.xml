<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".adicao_de_foto_activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/squarebox"
            android:layout_marginTop="2dp">

            <Button
                android:id="@+id/buttonVoltarFoto"
                android:background="@drawable/back_24px"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="2dp"
                android:layout_centerVertical="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="35dp"
                android:text="Fotos da Residência" />

        </RelativeLayout>

        <TextView
            style="@style/FormTextView"
            android:text="Fotos de capa"/>

        <ImageView
            style="@style/FormTextView"
            android:id="@+id/fotoCapa"
            android:src="@drawable/ic_image_24px"
            android:layout_width="256dp"
            android:layout_height="144dp"/>

        <Button
            style="@style/FormTextView"
            android:text="Adicionar foto de capa"
            android:id="@+id/buttonAdicionarCapa"/>

        <TextView
            style="@style/FormTextView"
            android:text="Demais fotos"/>

        <ImageView
            style="@style/FormTextView"
            android:id="@+id/demaisFotos"
            android:src="@drawable/ic_image_24px"
            android:layout_width="256dp"
            android:layout_height="144dp"/>

        <Button
            style="@style/FormTextView"
            android:text="Adicionar demais fotos"
            android:id="@+id/buttonAdicionarFotos"/>

        <Button
            android:id="@+id/buttonProximoFoto"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop = "24dp"
            android:layout_marginLeft = "110dp"
            android:layout_marginRight = "110dp"
            android:gravity="center"
            android:text="Próximo" />

    </LinearLayout>

</ScrollView>

